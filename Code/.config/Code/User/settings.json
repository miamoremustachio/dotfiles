{
    "update.mode": "none", // Linux-specific
    "window.zoomLevel": 1, // Linux-specific
    "window.restoreFullscreen": true, // Linux-specific
    "window.newWindowDimensions": "fullscreen", // Linux-specific
    "window.menuBarVisibility": "toggle",
    "window.titleBarStyle": "custom", // Gnome-specific~
    "window.commandCenter": false,
    "workbench.tree.enableStickyScroll": false,
    "workbench.activityBar.location": "top",
    "workbench.layoutControl.enabled": false,
    "workbench.iconTheme": "a-file-icon-vscode",
    "workbench.startupEditor": "none",
    "editor.tabSize": 2,
    "editor.mouseWheelZoom": true,
    "editor.lightbulb.enabled": "off",
    "editor.occurrencesHighlight": "off",
    "editor.stickyScroll.enabled": false,
    "editor.stickyScroll.scrollWithEditor": false,
    "editor.unicodeHighlight.includeStrings": false,
    "editor.unicodeHighlight.includeComments": false,
    "javascript.suggest.autoImports": false,
    "files.exclude": {
        ".directory": true
    },
    "cSpell.language": "en",
    "cSpell.userWords": [
        "bson",
        "Excretus",
        "Flatpaks",
        "genderize",
        "linebreak",
        "miamoremustachio",
        "nuska",
        "oleg",
        "plusplus",
        "rpms",
        "taskrefs"
    ],
    "extensions.autoCheckUpdates": false,
    "extensions.autoUpdate": false,
    "terminal.integrated.sendKeybindingsToShell": true,
    "explorer.compactFolders": false,
    "chat.commandCenter.enabled": false,
    "git.blame.editorDecoration.template": "${subject} (${authorName})",
    "git.blame.statusBarItem.template": "${authorName}"
}